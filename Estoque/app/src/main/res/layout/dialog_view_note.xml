<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dados_corporeos"
        android:hint="@string/dialog_dados_corporeos"
        android:layout_marginTop="10dp">
    </TextView>


    <android.support.design.widget.TextInputEditText
        android:id="@+id/dados_peso"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/dialog_dados_peso"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/dados_musculo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/dados_corporeos" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/dados_musculo"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:hint="@string/dialog_dados_musculo"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dados_peso"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/dados_corporeos" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/dados_horario_pesagem"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/dialog_dados_hora_pesagem"
        android:imeOptions="actionNext"
        android:inputType="time"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/dados_bf"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dados_peso" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/dados_bf"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="@string/dialog_dados_bf"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dados_horario_pesagem"
        app:layout_constraintTop_toBottomOf="@+id/dados_musculo" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/dados_vf"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="@string/dialog_dados_vf"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dados_bf"
        app:layout_constraintTop_toBottomOf="@+id/dados_musculo" />


    <android.support.design.widget.TextInputEditText
        android:id="@+id/dados_cintura"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="@string/dialog_dados_cintura"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/dados_horario_pesagem" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/dados_braco"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:hint="@string/dialog_dados_braco"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dados_cintura"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/dados_bf" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dados_malhacao"
        android:hint="@string/dialog_dados_malhacao"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dados_cintura"
        android:layout_marginTop="10dp">
    </TextView>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/dados_horario_malhacao_inicio"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/dialog_dados_hora_malhacao_inicial"
        android:imeOptions="actionNext"
        android:inputType="textCapWords"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/dados_malhacao"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/dados_malhacao" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/dados_horario_malhacao_final"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/dialog_dados_hora_malhacao_final"
        android:imeOptions="actionNext"
        android:inputType="textCapWords"
        app:layout_constraintRight_toRightOf="@id/dados_horario_malhacao_inicio"
        app:layout_constraintStart_toEndOf="@+id/dados_horario_malhacao_inicio"
        app:layout_constraintTop_toTopOf="@id/dados_malhacao" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/dados_exercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="@string/dialog_dados_exercicio"
        android:imeOptions="actionNext"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toTopOf="@id/dados_horario_malhacao_inicio" />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botoes"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dados_exercicio"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/linkBlue"
            android:textSize="15sp"
            android:text="@string/bt_salvar"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/save"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red3"
            android:textSize="15sp"
            android:text="@string/bt_excluir"
            android:layout_marginLeft="10dp"
            android:id="@+id/delete"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>


